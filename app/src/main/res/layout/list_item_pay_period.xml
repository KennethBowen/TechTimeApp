<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/hoursButtonListItem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text=""
        android:background="@drawable/ripple_circle_button"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repairOrderNumberListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/hoursButtonListItem"
        app:layout_constraintTop_toTopOf="@+id/hoursButtonListItem" />

    <TextView
        android:id="@+id/repairOrderWriterListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/hoursButtonListItem"
        app:layout_constraintStart_toEndOf="@+id/hoursButtonListItem"
        app:layout_constraintTop_toBottomOf="@+id/repairOrderNumberListItem" />

    <TextView
        android:id="@+id/repairOrderDateListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/repairOrderNumberListItem"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/repairOrderGrossListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text=""
        android:textColor="@color/thatMeanGreen"
        app:layout_constraintBaseline_toBaselineOf="@+id/repairOrderWriterListItem"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>